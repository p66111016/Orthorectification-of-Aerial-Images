<Window x:Class="Orthophoto.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Orthophoto"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="Open" Content="開啟" HorizontalAlignment="Left" Margin="151,359,0,0" VerticalAlignment="Top" Height="44" Width="77" Click="Open_Click"/>
        <Image x:Name="original" HorizontalAlignment="Left" Height="246" Margin="71,68,0,0" VerticalAlignment="Top" Width="266"/>
        <Button x:Name="Read" Content="讀取" HorizontalAlignment="Left" Margin="304,359,0,0" VerticalAlignment="Top" Height="44" Width="77" Click="Read_Click"/>
        <Button x:Name="transform" Content="轉換" HorizontalAlignment="Left" Margin="447,359,0,0" VerticalAlignment="Top" Height="44" Width="77" Click="transform_Click"/>
        <Image x:Name="process" HorizontalAlignment="Left" Height="249" Margin="415,68,0,0" VerticalAlignment="Top" Width="257"/>
        <ComboBox x:Name="combobox" HorizontalAlignment="Left" Margin="597,359,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged" IsEditable="True"/>

    </Grid>
</Window>
